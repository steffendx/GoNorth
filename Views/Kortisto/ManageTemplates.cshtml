@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["ManageTemplates"];
}

<h2>@ViewData["Title"]</h2>

<div id="gn-kortistoManageTemplatesContainer">
    @await Html.PartialAsync("~/Views/FlexFieldDatabase/ManageTemplates.cshtml", Localizer)
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/js/Kortisto/manageTemplates.viewmodel.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Kortisto/manageTemplates.viewmodel.min.js" asp-append-version="true"></script>
    </environment>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            ko.applyBindings(new GoNorth.Kortisto.ManageTemplates.ViewModel(), jQuery("#gn-kortistoManageTemplatesContainer")[0]);
        });
    </script>
}