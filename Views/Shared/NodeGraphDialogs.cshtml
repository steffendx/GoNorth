@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<!-- Delete Node Dialog -->
<div class="modal fade" role="dialog" data-bind="modal: showConfirmNodeDeleteDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer["AreYouSure"]</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger gn-defaultContentTopMargin" style="display: none" data-bind="visible: deleteErrorOccured">
                    <strong>@Localizer["Error"]</strong> @Localizer["ErrorOccured"]</span> <span data-bind="text: deleteErrorAdditionalInformation, visible: deleteErrorAdditionalInformation"></span>
                </div>
                
                <p>@Localizer["AreYouSureYouWantToDeleteTheNode"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: deleteNode, disable: deleteLoading"><i class="glyphicon glyphicon-refresh spinning" style="display: none" data-bind="visible: deleteLoading"></i> <span data-bind="visible: !deleteLoading()">@Localizer["Yes"]</span></button>
                <button type="button" class="btn btn-default" data-bind="click: closeConfirmNodeDeleteDialog, disable: deleteLoading"><i class="glyphicon glyphicon-refresh spinning" style="display: none" data-bind="visible: deleteLoading"></i> <span data-bind="visible: !deleteLoading()">@Localizer["No"]</span></button>
            </div>
        </div>
    </div>
</div>